{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang build active file",
			"command": "/usr/bin/clang",
			"args": [
				"-g",
				"-DDEBUG",
				"${workspaceFolder}/src/*.c",
				"${workspaceFolder}/src/lib/*.c",
				"-lresolv",	// libresolv
				"-lz", // zlib
				"-o",
				"${workspaceFolder}/dist/godoh-vscode"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/clang"
		}
	]
}